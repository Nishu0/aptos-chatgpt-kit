{
  "openapi": "3.1.0",
  "info": {
    "title": "Aptos ChatGPT Kit",
    "description": "MCP server for Aptos blockchain operations including wallet management, token swaps, staking, and balance checks",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://aptos-chatgpt-kit.vercel.app"
    }
  ],
  "paths": {
    "/mcp": {
      "post": {
        "operationId": "mcpRequest",
        "summary": "MCP Protocol Handler",
        "description": "Handles all MCP protocol requests including tool calls and resource requests",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "jsonrpc": {
                    "type": "string",
                    "enum": ["2.0"]
                  },
                  "id": {
                    "oneOf": [
                      { "type": "string" },
                      { "type": "number" }
                    ]
                  },
                  "method": {
                    "type": "string"
                  },
                  "params": {
                    "type": "object"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful MCP response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}
